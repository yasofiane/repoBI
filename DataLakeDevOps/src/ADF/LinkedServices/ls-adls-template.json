{
  "contentVersion": "1.0.0.0",
  "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "parameters": {
    "dataFactoryName": {
      "type": "string",
      "metadata": {
        "description": "Name of the data factory."
      }
    },
    "adlsLinkedServiceName": {
      "type": "string",
      "metadata": {
        "description": "Name of the Azure Data Lake Store linked service."
      }
    },
    "adlsName": {
      "type": "string",
      "metadata": {
        "description": "Name of the Azure Data Lake."
      }
    },
    "adfServicePrincipalID": {
      "type": "string",
      "metadata": {
        "description": "ID of the Service Principal"
      }
    },
    "servicePrincipalKey": {
      "type": "securestring",
      "metadata": {
        "description": "Key of the Service Principal"
      }
    }
  },
  "resources": [
    {
      "name": "[parameters('dataFactoryName')]",
      "apiVersion": "2017-09-01-preview",
      "type": "Microsoft.DataFactory/factories",
      "location": "[resourceGroup().location]",
      "resources": [
        {
          "type": "linkedservices",
          "name": "[parameters('adlsLinkedServiceName')]",
          "dependsOn": [
            "[parameters('dataFactoryName')]"
          ],
          "apiVersion": "2017-09-01-preview",
          "properties": {
            "type": "AzureDataLakeStore",
            "description": "Azure Data Lake Store linked service",
            "typeProperties": {
              "dataLakeStoreUri": "[concat('https://', parameters('adlsName'), '.azuredatalakestore.net/webhdfs/v1')]",
              "resourceGroupName": "[resourceGroup().name]",
              "servicePrincipalId": "[parameters('adfServicePrincipalID')]",
              "servicePrincipalKey": "[parameters('servicePrincipalKey')]",
              "subscriptionId": "[subscription().subscriptionId]",
              "tenant": "[subscription().tenantId]"
            }
          }
        }
      ]
    }
  ]
}